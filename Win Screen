import arcade


WIDTH = 640
HEIGHT = 480

#my_button = [50, 200, 50, 50] 
show_text = False

#RECT_WIDTH = 225
#RECT_HEIGHT = 900


center_x = 130  
center_y = 75   
delta_x = 3     
delta_y = 1     

def on_update(delta_time):
    global center_x, center_y
    global delta_x, delta_y

    center_x += delta_x
    center_y += delta_y



def on_draw():
    arcade.start_render()
    #arcade.draw_rectangle_filled(center_x, center_y, RECT_WIDTH, RECT_HEIGHT, arcade.color.BLACK)
    arcade.draw_text("You Win", 250, 405, arcade.color.BLACK, 40)

    arcade.draw_text("Congratulations", 235, 160, arcade.color.BLACK, 30)

    texture = arcade.load_texture("images/thumbsup2.jpg")
    scale = .3
    arcade.draw_texture_rectangle(125, 300, scale * texture.width,
                                  scale * texture.height, texture, 0)
    texture = arcade.load_texture("images/thumbsup.jpg")
    scale = .1
    arcade.draw_texture_rectangle(540, 300, scale * texture.width,
                                  scale * texture.height, texture, 0)
    #arcade.draw_xywh_rectangle_filled(my_button[0],
                                      #my_button[1],
                                      #my_button[2],
                                      #my_button[3],
                                      #arcade.color.WHITE)

    if show_text:
        arcade.draw_text("", 100, 250, arcade.color.WHITE, 18)



def on_key_press(key, modifiers):
    pass


def on_key_release(key, modifiers):
    pass


def on_mouse_press(x, y, button, modifiers):
    global show_text

def setup():
    arcade.open_window(WIDTH, HEIGHT, "Win Screen")
    arcade.set_background_color(arcade.color.YELLOW)
    arcade.schedule(on_update, 1/60)

    window = arcade.get_window()
    window.on_draw = on_draw
    window.on_update = on_update
    window.on_key_press = on_key_press
    window.on_key_release = on_key_release
    window.on_mouse_press = on_mouse_press

    arcade.run()


if __name__ == '__main__':
    setup()
